<UserControl x:Class="GitLabGitExtensionsPlugin.MergeRequestsManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitLabGitExtensionsPlugin"
             mc:Ignorable="d" 
			 d:DataContext="{d:DesignInstance local:MergeRequestsManagerViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="100"/>
		</Grid.ColumnDefinitions>
		<DataGrid x:Name="MergeRequests" AutoGenerateColumns="False"  ItemsSource="{Binding OpenedMergeRequests}" >
			<DataGrid.Columns>
				<DataGridTextColumn Header="Assignee" Binding="{Binding Assignee}"/>
				<DataGridTextColumn Header="SourceBranch" Binding="{Binding SourceBranch}"/>				
				<DataGridTextColumn Header="Title" Binding="{Binding Title}" />
				<DataGridTextColumn Header="UpdatedAt" Binding="{Binding UpdatedAt}" />
			</DataGrid.Columns>
		</DataGrid>
		<Button Grid.Column="2" 
				Height="50" 
				VerticalAlignment="Top" 				
				Command="{Binding SelectedItem.SwitchToBranchCommand, ElementName=MergeRequests}">Switch to</Button>
	</Grid>
</UserControl>
